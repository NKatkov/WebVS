doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title= title
		link(rel='stylesheet', href='/stylesheets/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		
		script(type='text/javascript', src='http://code.jquery.com/jquery-1.12.0.min.js')
		script(type='text/javascript', src='/stylesheets/bootstrap/js/bootstrap.min.js')
	body
		nav.navbar.navbar-inverse.navbar-fixed-top
			.container
				.navbar-header
					a.navbar-brand(href='/') NHost
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						li.active
							a(href='/') Главная
						li
							a(href='#about') About
						li
							a(href='#contact') Contact
						if (!app.user)
							li
								a(href="#", data-toggle='modal', data-target='#modalLogin') Войти	
						else
							li
								a(href="/auth/logout") Выйти			

							
		.container
			.col-md-8.clearfix
				block content
			
			.col-md-4
				if (app.user)
					include _sidebar
			
			
		if (!app.user)
			include auth-modal
			
		footer.footer
			.container
				p.text-muted Дай мне диплом!!!
			
		