extends layout

block content
	h1= title
	p Личный кабинет
	table
		tr
			td
				ul
					li: a(href="/app") Мои приложения
					li: a(href="/app/install") Добавить новое приложение
					li: a(href="/app/add_ports") Заполнить таблицу портов
					li: a(href="/app/ports") Добавить новое приложение
					li: a(href="/") На главную
			td
	table.table
		thead
			tr
				th №
				th Название
				th Порт
				th Статус
				th.ctext(width="214") Действие
		tbody
			- var i = 1,key
			each key in List   
				tr
					td #{i++}
					td #{key.AppName}
						br 
						| (#{key.IP})
					td #{key.Port}
					td #{key.Status}
					td
						if( key.Status == 'Online')
							a(href='/app/#{key._id}/disable').btn.btn-xs.btn-info Выключить 
						else
							a(href='/app/#{key._id}/enable').btn.btn-xs.btn-info Включить 
						| 
						a(href='/app/#{key._id}/edit').btn.btn-xs.btn-info Изменить 
						| 
						a(href='/app/#{key._id}/del').btn.btn-xs.btn-danger
							i.glyphicon.glyphicon-remove
	p #{List}